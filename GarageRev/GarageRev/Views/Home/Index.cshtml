@model dynamic


@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="~/css/ImagensFavorites.css" />
</head>
<h1 style="color:lightblue"> Carros em Destaque</h1>

<body style="background-image: url('../Background/background3garagerev.jpg'); background-repeat:no-repeat; background-size:cover; backdrop-filter: blur(5px)">   
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"/>

    <form asp-action="Index" enctype ="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"/>

            <div style="border-top: 20px solid transparent;border-bottom: 5px solid transparent; width:625px;">
              <div class="form-group col-sm-8">
                <label >Categories</label>
                <label for="myMultiselect"></label>
                <div id="myMultiselect" class="multiselect">
                  <div id="mySelectLabel" class="selectBox" onclick="toggleCheckboxArea()">
                    <select class="form-select">
                      <option>somevalue</option>
                    </select>
                    <div class="overSelect"></div>
                  </div>
                  <div id="mySelectOptions">
                    <label for="one"><input name="ChoosenCategory" type="checkbox" id="one" onchange="checkboxStatusChange()" value="Elétrico" />Elétrico</label>
                    <label for="two"><input name="ChoosenCategory" type="checkbox" id="two" onchange="checkboxStatusChange()" value="Desportivo" />Desportivo</label>
                    <label for="three"><input name="ChoosenCategory" type="checkbox" id="three" onchange="checkboxStatusChange()" value="Citadino" />Citadino</label>
                    <label for="four"><input name="ChoosenCategory" type="checkbox" id="four" onchange="checkboxStatusChange()" value="SUV" />SUV</label>
                    <label for="five"><input name="ChoosenCategory" type="checkbox" id="four" onchange="checkboxStatusChange()" value="Mota" />Mota</label>

                  </div>
                </div>
              </div>

            </div>
            <div class="form-group">
                <input type="submit" value="Filter" class="btn btn-primary" />
            </div>
    </form>

    @*Para cada carro*@
    @if (Model != null)
    {
        @foreach (Carros carros in Model.Carros)
        {

            <div class="Carros">
                <a asp-controller="Carros" asp-action="Details" asp-route-id="@carros.Id">
                    <img class="Carros" src="~/Photos/@Html.DisplayFor(modelItem => carros.Foto)"/>
                    <div class="overlay">
                        <div class="text">
                            @Html.DisplayFor(modelItem => carros.Marca)
                        </div>
                    </div>
                </a>
            </div>
        }

    }else
    {
        <h2>Modelos estão null</h2>
    }




   
