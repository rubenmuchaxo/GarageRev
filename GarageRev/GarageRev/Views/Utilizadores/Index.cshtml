@model IEnumerable<GarageRev.Models.Utilizadores>

@{
    ViewData["Title"] = "Index";
}

<h1>Utilizadores</h1>

@if (User.Identity.IsAuthenticated) {
    <p>
        <a asp-action="Create">Adicionar Novo Utilizador</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>

            <td>
            <td>@if (User.Identity.IsAuthenticated) {
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar |</a>
                    <a asp-action = "Delete" asp-route-id = "@item.Id" > Apagar |</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Ver Detalhes</a> 
                    }
            </td>
        </tr>
}
    </tbody>
</table>
