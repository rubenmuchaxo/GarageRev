            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Versao" class="control-label"></label>
                <input asp-for="Versao" class="form-control" />
                <span asp-validation-for="Versao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Combustivel" class="control-label"></label>
                <input asp-for="Combustivel" class="form-control" />
                <span asp-validation-for="Combustivel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CilindradaouCapacidadeBateria" class="control-label"></label>
                <input asp-for="CilindradaouCapacidadeBateria" class="form-control" />
                <span asp-validation-for="CilindradaouCapacidadeBateria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Potencia" class="control-label"></label>
                <input asp-for="Potencia" class="form-control" />
                <span asp-validation-for="Potencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoCaixa" class="control-label"></label>
                <input asp-for="TipoCaixa" class="form-control" />
                <span asp-validation-for="TipoCaixa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nportas" class="control-label"></label>
                <input asp-for="Nportas" class="form-control" />
                <span asp-validation-for="Nportas" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input type="file" name="fotografia" class="form-control" accept=".jpg, .png, .webp" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"/>

            <div style="border-top: 20px solid transparent;border-bottom: 5px solid transparent; width:625px">
              <div class="form-group col-sm-8">
                <label>Categories</label>
                <label for="myMultiselect"></label>
                <div id="myMultiselect" class="multiselect">
                  <div id="mySelectLabel" class="selectBox" onclick="toggleCheckboxArea()">
                    <select class="form-select">
                      <option>somevalue</option>
                    </select>
                    <div class="overSelect"></div>
                  </div>
                  <div id="mySelectOptions">
                    <label for="one"><input name="ChoosenCategory" type="checkbox" id="one" onchange="checkboxStatusChange()" value="Desportivo" />Desportivo</label>
                    <label for="two"><input name="ChoosenCategory" type="checkbox" id="two" onchange="checkboxStatusChange()" value="Elétrico" />Elétrico</label>
                    <label for="three"><input name="ChoosenCategory" type="checkbox" id="three" onchange="checkboxStatusChange()" value="Citadino" />Citadino</label>
                    <label for="four"><input name="ChoosenCategory" type="checkbox" id="four" onchange="checkboxStatusChange()" value="SUV" />SUV</label>
                    <label for="five"><input name="ChoosenCategory" type="checkbox" id="five" onchange="checkboxStatusChange()" value="Mota" />Mota</label>

                  </div>
                </div>
              </div>
             </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
